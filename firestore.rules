rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Course pricing - read-only for authenticated users
    match /coursePricing/{courseId} {
      allow read: if request.auth != null;
      allow write: if false; // Admin only via Firebase Console
    }

    // Acuity appointments mirror - Cloud Functions only (Admin SDK bypasses rules)
    match /acuityAppointments/{appointmentId} {
      allow read, write: if false;
    }

    // Partner documents
    match /partners/{partnerId} {
      // Partners can read their own document
      allow read: if request.auth != null && request.auth.uid == partnerId;

      // Partners can create their own document on registration — strict field whitelist
      allow create: if request.auth != null && request.auth.uid == partnerId
        && request.resource.data.keys().hasAll(['businessName', 'contactName', 'email'])
        && request.resource.data.keys().hasOnly(['businessName', 'contactName', 'email', 'phone', 'abn'])
        && request.resource.data.businessName is string
        && request.resource.data.contactName is string
        && request.resource.data.email is string
        && request.resource.data.businessName.size() > 0
        && request.resource.data.businessName.size() <= 200
        && request.resource.data.contactName.size() > 0
        && request.resource.data.contactName.size() <= 200
        && request.resource.data.email.size() > 0
        && request.resource.data.email.size() <= 200
        // Validate optional fields when present
        && (!('phone' in request.resource.data.keys()) || (request.resource.data.phone is string && request.resource.data.phone.size() <= 30))
        && (!('abn' in request.resource.data.keys()) || (request.resource.data.abn is string && request.resource.data.abn.size() <= 20));

      // Partners can update their own document — whitelist of allowed fields only
      allow update: if request.auth != null && request.auth.uid == partnerId
        && request.resource.data.diff(resource.data).affectedKeys()
            .hasOnly(['businessName', 'contactName', 'email', 'phone', 'abn'])
        && request.resource.data.businessName is string
        && request.resource.data.businessName.size() > 0
        && request.resource.data.businessName.size() <= 200
        && request.resource.data.contactName is string
        && request.resource.data.contactName.size() <= 200
        && request.resource.data.email is string
        && request.resource.data.email.size() <= 200
        && (!('phone' in request.resource.data.keys()) || (request.resource.data.phone is string && request.resource.data.phone.size() <= 30))
        && (!('abn' in request.resource.data.keys()) || (request.resource.data.abn is string && request.resource.data.abn.size() <= 20));

      // Partners cannot delete their own document
      allow delete: if false;

      // Employees subcollection — field whitelist with type/size validation
      match /employees/{employeeId} {
        allow read: if request.auth != null && request.auth.uid == partnerId;
        allow create: if request.auth != null && request.auth.uid == partnerId
          && request.resource.data.keys().hasOnly(['name', 'email', 'phone', 'certifications'])
          && request.resource.data.name is string
          && request.resource.data.name.size() > 0
          && request.resource.data.name.size() <= 200
          && (!('email' in request.resource.data.keys()) || (request.resource.data.email is string && request.resource.data.email.size() <= 254))
          && (!('phone' in request.resource.data.keys()) || (request.resource.data.phone is string && request.resource.data.phone.size() <= 30))
          && (!('certifications' in request.resource.data.keys()) || (request.resource.data.certifications is list && request.resource.data.certifications.size() <= 50));
        allow update: if request.auth != null && request.auth.uid == partnerId
          && request.resource.data.diff(resource.data).affectedKeys()
              .hasOnly(['name', 'email', 'phone', 'certifications'])
          && request.resource.data.name is string
          && request.resource.data.name.size() > 0
          && request.resource.data.name.size() <= 200
          && (!('email' in request.resource.data.keys()) || (request.resource.data.email is string && request.resource.data.email.size() <= 254))
          && (!('phone' in request.resource.data.keys()) || (request.resource.data.phone is string && request.resource.data.phone.size() <= 30))
          && (!('certifications' in request.resource.data.keys()) || (request.resource.data.certifications is list && request.resource.data.certifications.size() <= 50));
        allow delete: if request.auth != null && request.auth.uid == partnerId;
      }

      // Bookings subcollection — strict validation, limited update
      match /bookings/{bookingId} {
        allow read: if request.auth != null && request.auth.uid == partnerId;
        allow create: if request.auth != null && request.auth.uid == partnerId
          && request.resource.data.keys().hasAll(['courseName', 'courseDate', 'employees'])
          && request.resource.data.keys().hasOnly([
               'courseName', 'courseDate', 'employees', 'courseCode', 'notes', 'createdAt'
             ])
          && request.resource.data.courseName is string
          && request.resource.data.courseName.size() > 0
          && request.resource.data.courseName.size() <= 500
          && request.resource.data.courseDate is string
          && request.resource.data.courseDate.size() <= 20
          && request.resource.data.employees is list
          && request.resource.data.employees.size() <= 100
          && (!('notes' in request.resource.data.keys()) || (request.resource.data.notes is string && request.resource.data.notes.size() <= 5000))
          && (!('courseCode' in request.resource.data.keys()) || (request.resource.data.courseCode is string && request.resource.data.courseCode.size() <= 50));
        // Partners can only update notes — with size limit
        allow update: if request.auth != null && request.auth.uid == partnerId
          && request.resource.data.diff(resource.data).affectedKeys()
              .hasOnly(['notes'])
          && request.resource.data.notes is string
          && request.resource.data.notes.size() <= 5000;
      }
    }
  }
}
